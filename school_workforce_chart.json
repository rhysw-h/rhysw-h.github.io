{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "School workforce by category.",
    "data": {
      "url": "https://raw.githubusercontent.com/rhysw-h/rhysw-h.github.io/refs/heads/main/teacher%20count%20proper%204csv.csv"
    },
    "title": {
      "text": "Percentage of teachers of different ethnicities in the UK 2011-2024",
    "subtitle": "Source: School Workforce Census"
    },
"height": "200",
  "width": "500",
  "autosize": {
    "type": "fit",
    "contains": "padding"
  },
 "transform": [
      {
        "fold": ["whitep", "notwhitep"],  
        "as": ["category", "value"]  
      }
    ],
    "mark": {
      "type": "line",
      "point": true
    },
    "encoding": {
      "x": {
        "field": "date",
        "type": "temporal",
        "title": false
      },
      "y": {
        "field": "value",
        "type": "quantitative",
        "title": false,
        "axis": {
          "format": "%"}
      },
  
      "color": {
        "field": "category",
        "type": "nominal",
        "title": "Category",
        "scale": {
          "domain": ["whitep", "notwhitep"], 
          "range": ["blue", "orange"] 
        },
        "legend": {
          "labelExpr": "datum.value === 'whitep' ? 'Percentage of White Teachers' : 'Percentage of Non-White Teachers '"  
        }
      }
      }
    }
  
